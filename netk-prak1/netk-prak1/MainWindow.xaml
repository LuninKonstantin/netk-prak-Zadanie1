<Window x:Class="netk_prak1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:netk_prak1"
        mc:Ignorable="d"
        Title="НЭТК. Классный руководитель" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="LightBlue">
            <TextBlock Text="НЭТК. Классный руководитель" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"/>
            <Image Source="logo.png" HorizontalAlignment="Right" VerticalAlignment="Center" Height="50" Margin="0,0,715,0"/>
        </Grid>
        <Frame Name="mainFrame" Grid.Row="1"/>
    </Grid>
</Window>
